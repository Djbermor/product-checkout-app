{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src",
    "module": "commonjs",
    "target": "ES2023",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infrastructure/*"],
      "@ui/*": ["ui/*"],
      "@components/*": ["ui/components/*"],
      "@pages/*": ["ui/pages/*"],
      "@routes/*": ["routes/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@shared/*": ["shared/*"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom"],
  }
}
